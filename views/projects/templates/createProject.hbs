<form class="form create-project-form">
  <div class="modal-header">
    <button type="button" class="modal-box-close">
      &times;
    </button>
    <h4 class="modal-title">
      新建项目
    </h4>
  </div>
  <div class="modal-body" style="width:440px;height:280px;">
    <div class="form-group">
      <label style="width: 80px;">项目名称：</label>
      <input type="text" class="form-control" placeholder="请输入项目名称" name="name" autocomplete="off" required>
    </div>
    <div class="form-group evniroment">
      <label style="width: 80px;">接口地址：</label>
      <div style="width:100%;">
      <div style="width:48%;float:left;margin: 0 2px;">
        <div class="project-env">
          <a class="btn btn-xs dev" href="javascript:;">开发</a>
          <input type="text" class="form-control" name="dev_domain" placeholder="请输入接口调用地址"  />
        </div>
        <div class="project-env">
          <a class="btn btn-xs test" href="javascript:;">测试</a>
          <input type="text" class="form-control" name="test_domain" />
        </div>
      </div>
      <div style="width:48%;float:left;margin: 0 2px;">
        <div class="project-env">
          <a class="btn btn-xs pre" href="javascript:;">预发</a>
          <input type="text" class="form-control" name="pre_domain" />
        </div>
        <div class="project-env">
          <a class="btn btn-xs prod" href="javascript:;">生产</a>
          <input type="text" class="form-control" name="prod_domain" />
        </div>
      </div>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-sm btn-default modal-box-close-btn">取消</button>
    <input type="submit" class="btn btn-sm btn-primary" value="保存"/>
  </div>
</form>
