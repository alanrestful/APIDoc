<form class="form create-app-form">
  <div class="modal-header">
    <button type="button" class="modal-box-close">
      &times;
    </button>
    <h4 class="modal-title">
      新建应用
    </h4>
  </div>
  <div class="modal-body" style="width:400px;height:200px;">
    <div class="modal-body">
      <div class="form-group">
        <label>应用名称：</label>
        <input type="hidden" name="projectId" value="{{id}}"/>
        <input type="hidden" name="env" value="{{env}}"/>
        <input type="hidden" name="domain" value="{{domain}}"/>
        <input type="text" class="form-control" placeholder="请填写应用名称" name="name" required>
      </div>
      <div class="form-group">
        <label>应用备注：</label>
        <input type="text" class="form-control" placeholder="请填写应用备注" name="tag">
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-sm btn-default modal-box-close-btn">取消</button>
    <input type="submit" class="btn btn-sm btn-primary" value="保存"/>
  </div>
</form>
