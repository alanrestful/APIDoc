{{> header}}
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
            <hr style="margin: 5px auto;">
            <ul class="nav nav-sidebar">
                <li><a href="#">个人资料</a></li>
                <li><a href="/users/passport">修改密码</a></li>
            </ul>
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
            <h3 class="page-header">
                个人资料
                {{#if user}}

                {{/if}}
            </h3>
            <form class="form">
                {{#with user}}
                <div class="form-group">
                    <label>用户名:</label>
                    <span>{{name}}</span>
                </div>
                <div class="form-group">
                    <label>手机号码:</label>
                    <span>{{mobile}}</span>
                </div>
                <div class="form-group">
                    <label>电子邮箱:</label>
                    <span>{{email}}</span>
                </div>
                {{/with}}
            </form>
        </div>
    </div>
</div>
