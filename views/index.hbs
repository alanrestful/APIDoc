<style type="text/css">
 body { padding-top: 0px; }
</style>
<div class="container" style="background-image:url(images/back.png);width:100%;height:680px;background-position:center; background-repeat:repeat-y;">
  <div class="row clearfix">
    <div class="col-md-12 column">
      <div class="row clearfix">
        <div class="col-md-12 column" style="margin-top:20px;">
          <div class="row clearfix" style="width: 90%;margin: 0 auto;">
            <div class="col-md-6 column" style="color:white;padding-left:20px;">
              <h3>APIDoc</h3>
            </div>
            <div class="col-md-6 column">
              <ul class="nav nav-pills pull-right">
                <li class="active"><a href="/">首页</a></li>
                <li><a href="/projects">项目管理</a></li>
                {{#if User}}
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{User}} <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                      <li><a href="/users/center">个人中心</a></li>
                      <li><a href="#" onclick="logoutEvent()">注销</a></li>
                    </ul>
                  </li>
                {{/if}}
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class="row clearfix" style="color:white;margin-top:170px;">
        <div class="col-md-12 column">
          <h3 class="text-center" style="color: #357ebd;">APIDoc 云端 RestFul API 管理</h3>
          <h1 class="text-center" style="margin-top: 30px;color: #357ebd;">简洁明了的接口文档管理 构建高效的团队协作</h1>
          <div class="col-md-12 column text-center" style="margin-top:50px;">
            {{#unless User}}
              <a class="btn btn-primary btn-large login-btn" data-toggle="modal" data-target=".login-modal">快速登入</a>
            {{/unless}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade login-modal" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
  <div class="modal-dialog" style="margin-top:150px;">
    <div class="modal-content" style="width: 320px;margin:0 auto;">
      <form role="form " class="login-form">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
            &times;
          </button>
          <h4 class="modal-title">
            登录
          </h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label style="width: 70px;">Username</label>
            <input type="text" class="form-control" id="userName" placeholder="Username..." name="userName" required/>
          </div>
          <div class="form-group">
            <label style="width: 70px;">Password</label>
            <input type="password" class="form-control" id="passWord" placeholder="Password..." name="password" required/>
          </div>
          <div class="form-group" style="margin: 0 auto;text-align: center;">
            <a href="#" class="register-btn">注册</a>
            <button type="submit" class="btn btn-sm btn-success " name="login" onclick="loginEvent(event)">Login</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="registerModalLabel" aria-hidden="true">
  <div class="modal-dialog" style="margin-top: 150px;">
    <div class="modal-content" style="width:400px;margin: 0 auto;">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
          &times;
        </button>
        <h4 class="modal-title">
          注册
        </h4>
      </div>
      <div class="modal-body">
        <form class="register-form">
          <div class="form-group">
            <label>用户名</label>
            <input type="text" class="form-control" placeholder="请填写您的用户名" name="username" required/>
          </div>
          <!-- <div class="form-group">
            <label>手机号码</label>
            <input type="text" class="form-control" placeholder="请填写您的手机号码" name="mobile" required/>
          </div>
          <div class="form-group">
            <label>电子邮箱</label>
            <input type="text" class="form-control" placeholder="电子邮箱" name="email" required/>
          </div> -->
          <div class="form-group">
            <label>密码</label>
            <input type="password" class="form-control" placeholder="输入密码" name="password" required/>
          </div>
          <div class="form-group">
            <label>确认密码</label>
            <input type="password" class="form-control" placeholder="再次输入上面的密码" name="password2" required/>
          </div>
          <!-- <div class="form-group">
            <label>验证码</label>
            <input type="text" class="form-control" name="code" style="width:120px" placeholder="请输入图片中的字符" required/>
            <img src="" id="codeImg" style="width:120px;" />
          </div> -->
          <div class="form-group" style="margin: 0 auto;text-align: center;">
            <a type="button" class="btn" data-dismiss="modal"><span aria-hidden="true">取消</span><span class="sr-only">取消</span></a>
            <button type="submit" class="btn btn-sm btn-success">注册</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
